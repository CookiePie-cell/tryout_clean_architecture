<?xml version="1.0" encoding="utf-8"?>
<com.kennyc.view.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/msvScore"
    app:msv_viewState="content"
    app:msv_loadingView="@layout/layout_loading_score"
    app:msv_emptyView="@layout/layout_empty_score"
    app:msv_errorView="@layout/layout_error_score"
    tools:context=".ui.score.ScoreActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvScore"
            tools:listitem="@layout/item_score"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.kennyc.view.MultiStateView>