<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    
    <ImageView
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/ivShimmerProblem1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmerProblemSection2"
        app:layout_constraintTop_toBottomOf="@id/ivShimmerProblem1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingVertical="12dp">
        
        <ImageView
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerProblem3"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_top_right_bottom_right_radius"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem3"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerProblem2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerProblem4"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem4"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerProblem3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerProblem5"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem5"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerProblem4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerProblem6"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem6"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerProblem5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerProblem7"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem7"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerProblem6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerProblem8"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerProblem8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerProblem7"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_top_left_bottom_left_radius"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmerProblemSection3"
        app:layout_constraintTop_toBottomOf="@+id/shimmerProblemSection2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:id="@+id/ivShimmerProblem9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/ivShimmerProblem10"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmerProblem9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/ivShimmerProblem11"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmerProblem10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/ivShimmerProblem12"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmerProblem11"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/ivShimmerProblem13"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmerProblem12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/ivShimmerProblem14"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ivShimmerProblem13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmerProbelmSection4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerExplanation1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="192dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerExplanation2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ivShimmerExplanation1"
            app:layout_constraintRight_toLeftOf="@id/ivShimmerExplanation3"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/ivShimmerExplanation3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_bg_shimmer_rounded_corner_gray_12_full_radius"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>